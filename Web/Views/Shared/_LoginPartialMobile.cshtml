@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    @Html.ActionLink(User.Identity.GetUserName(), "index", "MyProfile", routeValues: null, htmlAttributes: new { @class = "item" })
}
else
{
    @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "item" })
    <a class="item" href="@Url.Action("Register", "Account")">
        <div class="ui primary button">Sign up</div>
    </a>
}
