@using UI.Builders.Shared.Enums
@model UI.Builders.Master.Views.MasterView

@if (Model.Master.CurrentUser.IsAuthenticated)
{
    if (Model.Master.CurrentUser.UserType == UserTypeEnum.Candidate)
    {
        <a class="item w-menu-right-item" href="@Url.Action("CandidateTypeIndex", "Auth")">
            <img alt="" class="ui avatar image" src="@Helpers.ImageHelper.GetUserAvatar(Model.Master.CurrentUser.Id)">
            &nbsp;<span>@Model.Master.CurrentUser.UserDisplayName</span>
            @if (Model.Master.StatusBox.NewMessagesCount > 0)
            {
                <span class="ui red label">
                    @Model.Master.StatusBox.NewMessagesCount
                </span>
            }
        </a>
    }
    else if (Model.Master.CurrentUser.UserType == UserTypeEnum.Company)
    {
        <a class="item w-menu-right-item" href="@Url.Action("CompanyTypeIndex", "Auth")">
            <img alt="" class="ui avatar image" src="@Helpers.ImageHelper.GetUserAvatar(Model.Master.CurrentUser.Id)">
            &nbsp;<span>@Model.Master.CurrentUser.UserDisplayName</span>
            @if (Model.Master.StatusBox.NewMessagesCount > 0)
            {
                <span class="ui red label">
                    @Model.Master.StatusBox.NewMessagesCount
                </span>
            }
        </a>
    }
    else
    {
        <a class="item w-menu-right-item" href="@Url.Action("UserTypeSelection", "Auth")">
            <img alt="" class="ui avatar image" src="@Helpers.ImageHelper.GetUserAvatar(Model.Master.CurrentUser.Id)">
            &nbsp;<span>@Model.Master.CurrentUser.UserDisplayName</span>
            @if (Model.Master.StatusBox.NewMessagesCount > 0)
            {
                <span class="ui red label">
                    @Model.Master.StatusBox.NewMessagesCount
                </span>
            }
        </a>
    }
}
else
{
    <a class="item w-menu-right-item" href="@Url.Action("Register", "Account")">
        <div class="ui secondary button">Registrovat</div>
    </a>
    <a class="item w-menu-right-item" href="@Url.Action("Login", "Account")">
        Přihlásit
    </a>
}
