@model UI.Builders.Account.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrace";
    ViewBag.Description = "Zaregistruj se a získej přístup ke všem nabídkám stáží (internship)";
    Layout = "~/Views/Shared/_PageBody.cshtml";
}

<div class="ui middle aligned center aligned sixteen column grid">
    <div class="row">
        <div class="five wide computer ten wide tablet sixteen wide mobile column">
            <h1>@ViewBag.Title</h1>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="ui negative message w-body-text-left">
                        <p>
                            @Html.ValidationSummary(false)
                        </p>
                    </div>
                }

                <div class="ui form">
                    @{
                        var email = Model?.RegisterForm != null ? Model.RegisterForm.Email : "";
                    }
                    <div class="field">
                        <div class="ui left icon input">
                            <input name="Email" placeholder="E-mail" type="text" value="@email">
                            <i class="mail outline icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <input name="Password" type="password" placeholder="Heslo">
                            <i class="lock icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <input name="ConfirmPassword" type="password" placeholder="Potvrzení hesla">
                            <i class="lock icon"></i>
                        </div>
                    </div>
                    <div class="field">

                    </div>
                    <input type="submit" class="ui submit button primary" value="Registrovat" />
                </div>
                        }
        </div>
    </div>
</div>
