@using UI.Builders.Master.Enums
@using UI.Builders.Shared.Enums
@using UI.Modules.Header
@model UI.Builders.Account.Views.ResetPasswordViewModel
@{
    Model.Metadata.BasicMetadata.Title = "Obnova hesla";

    Model.Layout.Type = LayoutTypeEnum.Light;
    Layout = Model.Layout.Path;

    Model.Header = new UiHeader()
    {
        Title = Model.Metadata.BasicMetadata.Title,
        Type = UiHeaderTypeEnum.Colored,
        Color = UIHeaderColorEnum.Medium,
        Size = UIHeaderSizeEnum.Inherit
    };
}

<div class="w-section-light">
    <div class="ui container">
        <div class="w-section w-section-center">
            <div class="ui centered grid">
                <div class="ui sixteen wide mobile sixteen wide tablet seven wide computer column w-body-text-center">
                    <p>
                        Pro obnovení hesla zadej svůj e-mail a nové heslo.
                    </p>
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, null))
                    {
                        @Html.AntiForgeryToken()

                        @Helpers.MessageHelper.RenderValidationSummary()

                        <div class="ui form">
                            <div class="field">
                                <div class="ui left icon input">
                                    <input name="Email" placeholder="E-mail" type="text" value="">
                                    <i class="mail outline icon"></i>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left icon input">
                                    <input name="Password" type="password" placeholder="Heslo">
                                    <i class="lock icon"></i>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left icon input">
                                    <input name="ConfirmPassword" type="password" placeholder="Potvrzení hesla">
                                    <i class="lock icon"></i>
                                </div>
                            </div>
                            <input type="submit" class="ui button primary" value="Obnovit heslo"/>
                            @Html.Hidden("Code", Model.Code)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
