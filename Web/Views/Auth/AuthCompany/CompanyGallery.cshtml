@using UI.Modules.Breadcrumbs.Models
@model UI.Builders.Auth.Views.CompanyGalleryView
@{
    Model.Metadata.BasicMetadata.Title = "Firemní galerie";
    Layout = Model.AuthMaster.AuthMasterLayout;
}
@Helpers.ScriptHelper.RequireScript("/scripts/views/auth/authCompanyGallery")
@Helpers.ScriptHelper.RequireCss("/scripts/addons/fineuploader/fine-uploader-new")
@* Template: https://fineuploader.com/demos.html *@
<script type="text/template" id="qq-template-validation">
    <div class="qq-uploader-selector qq-uploader" qq-drop-area-text="Přesuňte soubory zde">
        <div class="qq-total-progress-bar-container-selector qq-total-progress-bar-container">
            <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-total-progress-bar-selector qq-progress-bar qq-total-progress-bar"></div>
        </div>
        <div class="qq-upload-drop-area-selector qq-upload-drop-area" qq-hide-dropzone>
            <span class="qq-upload-drop-area-text-selector"></span>
        </div>
        <div class="qq-upload-button-selector qq-upload-button">
            <div>Vybrat</div>
        </div>
        <span class="qq-drop-processing-selector qq-drop-processing">
            <span>Nahrávám...</span>
            <span class="qq-drop-processing-spinner-selector qq-drop-processing-spinner"></span>
        </span>
        <ul class="qq-upload-list-selector qq-upload-list" aria-live="polite" aria-relevant="additions removals">
            <li>
                <div class="qq-progress-bar-container-selector">
                    <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-progress-bar-selector qq-progress-bar"></div>
                </div>
                <span class="qq-upload-spinner-selector qq-upload-spinner"></span>
                <img class="qq-thumbnail-selector" qq-max-size="100" qq-server-scale>
                <span class="qq-upload-file-selector qq-upload-file"></span>
                <span class="qq-upload-size-selector qq-upload-size"></span>
                <button type="button" class="qq-btn qq-upload-cancel-selector qq-upload-cancel">Zrušit</button>
                <button type="button" class="qq-btn qq-upload-retry-selector qq-upload-retry">Znova</button>
                <button type="button" class="qq-btn qq-upload-delete-selector qq-upload-delete">Smazat</button>
                <span role="status" class="qq-upload-status-text-selector qq-upload-status-text"></span>
            </li>
        </ul>

        <dialog class="qq-alert-dialog-selector">
            <div class="qq-dialog-message-selector"></div>
            <div class="qq-dialog-buttons">
                <button type="button" class="qq-cancel-button-selector">Zavřít</button>
            </div>
        </dialog>

        <dialog class="qq-confirm-dialog-selector">
            <div class="qq-dialog-message-selector"></div>
            <div class="qq-dialog-buttons">
                <button type="button" class="qq-cancel-button-selector">Ne</button>
                <button type="button" class="qq-ok-button-selector">Ano</button>
            </div>
        </dialog>

        <dialog class="qq-prompt-dialog-selector">
            <div class="qq-dialog-message-selector"></div>
            <input type="text">
            <div class="qq-dialog-buttons">
                <button type="button" class="qq-cancel-button-selector">Zrušit</button>
                <button type="button" class="qq-ok-button-selector">Ok</button>
            </div>
        </dialog>
    </div>
</script>
<div class="w-body-hide" id="_CompanyGalleryConfig" data-allowedextensions="@string.Join(", ", Core.Config.FileConfig.AllowedImageExtensions)" data-masfilesizebytes="@Core.Config.AppConfig.MaximumFileSize" data-guid="@Model.Master.CurrentCompany.CompanyGuid" data-endpointurl="@Url.Action("CompanyGallery", "FineUpload")"></div>
<div class="ui grid">
    <div class="sixteen wide mobile sixteen wide computer sixteen wide tablet column">
        @Helpers.BreadcrumbsHelper.GetBreadcrumbs(new List<BreadcrumbItem>()
        {
            new BreadcrumbItem("Menu", Url.Action(Model.AuthMaster.AuthMasterAction, "Auth")),
            new BreadcrumbItem("Firma", Url.Action("EditCompany", "AuthCompany")),
            new BreadcrumbItem(Model.Metadata.BasicMetadata.Title)
        })
    </div>
</div>
<div class="ui grid">
    <div class="sixteen wide mobile sixteen wide tablet sixteen wide computer column">
        <div class="ui segment">
            @Helpers.MessageHelper.RenderInfoMessage($"Pouze soubory typu <em>{string.Join(", ", Core.Config.FileConfig.AllowedImageExtensions)} </em> do velikosti <em>{Core.Helpers.ConvertHelper.FormatBytes(Core.Config.AppConfig.MaximumFileSize)}</em> budou uloženy")

            <div id="fine-uploader-validation"></div>

            <div class="ui three column grid _CompanyGalleryCards w-margin-top-14">
                @foreach (var image in Helpers.ImageHelper.GetCompanyGalleryImages(Model.Master.CurrentCompany.CompanyGuid))
                    {
                    <div class="column">
                        <div class="ui fluid card">
                            <div class="blurring dimmable image">
                                <div class="ui dimmer">
                                    <div class="content">
                                        <div class="center">
                                            <div class="ui inverted button _DeleteGallery" data-filename="@image.Key">Smazat</div>
                                        </div>
                                    </div>
                                </div>
                                <img alt="" src="@image.Value">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
