@using UI.Helpers;
@using UI.Extensions;
@model UI.Builders.Master.Views.MasterView

@{
    ViewBag.Title = "Můj profil";
    Layout = "~/Views/Shared/Body/DarkPadded.cshtml";
}

@Html.RequireScript("/scripts/views/auth/authIndex")

<div class="ui grid">
    <div class="sixteen wide mobile six wide tablet three wide computer column">
        <div class="ui segment padded w-body-text-center">

            <img alt="avatar" class="ui avatar tiny image" data-src="http://semantic-ui.com/images/wireframe/square-image.png" src="@ImageHelper.GetTransparentImage()">

            <p class="w-margin-top-10">
                <strong>Johnny Bravo</strong>
            </p>

            <p class="w-margin-top-30 w-body-text-left">
                <a href="#">Upravit profil</a>
            </p>
        </div>
    </div>
    <div class="sixteen wide mobile ten wide tablet ten wide computer column">

        <div class="ui secondary pointing menu">
            <a class="item active" data-tab="first">
                Konverzace
            </a>
            <a class="item" data-tab="second">
                Zprávy
            </a>
            <div class="right menu">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a class="ui item" href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="sign out icon"></i>
                        Odhlásit
                    </a>
                }

            </div>
        </div>

        <div class="ui tab segment active" data-tab="first"> First </div>
        <div class="ui tab segment" data-tab="second"> Second </div>


    </div>
    <div class="sixteen wide mobile sixteen wide tablet three wide computer column w-body-text-right">
            <a class="ui primary button" href="@Url.Action("NewInternship", "Auth")">
                Přidat nabídku
            </a>
    </div>
</div>


