@using UI.Helpers;
@using UI.Extensions;
@model UI.Builders.Auth.Views.AuthIndexView

@{
    ViewBag.Title = "Můj profil";
    Layout = "~/Views/Shared/Body/DarkPadded.cshtml";
}

@Html.RequireScript("/scripts/views/auth/authIndex")

<div class="ui grid">
    <div class="sixteen wide mobile six wide tablet three wide computer column">
        <div class="ui segment padded w-body-text-center">
            <a href="@Url.Action("Avatar", "Auth")">
                <img alt="avatar" class="ui avatar tiny image" data-src="http://semantic-ui.com/images/wireframe/square-image.png" src="@ImageHelper.GetTransparentImage()">
            </a>

            <p class="w-margin-top-10">
                <strong>Johnny Bravo</strong>
            <p class="w-font-size-small">
                Kentico
            </p>
            <p class="w-font-size-small">
                <a href="@Url.Action("EditProfile", "Auth")">Upravit profil</a>
            </p>
        </div>
    </div>
    <div class="sixteen wide mobile ten wide tablet nine wide computer column">

        <div class="ui secondary pointing menu w-auth-menu">
            <a class="item active" data-tab="first">
                Konverzace
            </a>
            <a class="item" data-tab="second">
                Vystavené nabídky
            </a>
            <div class="right menu">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a class="ui item" href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="sign out icon"></i>
                        Odhlásit
                    </a>
                }

            </div>
        </div>

        <div class="ui tab basic segment active" data-tab="first">

            <table class="ui very basic table w-table-listing _ConversationListingTable">
                <tbody>
                    <tr data-link="@Url.Action("Conversation")">
                        <td class="collapsing">
                            <img class="ui tiny image" alt="" src="@ImageHelper.GetTransparentImage()" data-src="https://www.startupjobs.cz/upload/logos/logo-auta-online1146010588880.png" />
                        </td>
                        <td>
                            <a href="@Url.Action("Conversation")">
                                John Brown
                            </a>
                        </td>
                        <td class="collapsing w-body-text-right w-mobile-left">
                            <i class="calendar icon"></i>
                            @DateTime.Now.ToShortTimeString()
                        </td>
                        <td class="collapsing w-body-text-right w-mobile-left">
                            <i title="Přečteno" class="checkmark green icon"></i>

                        </td>
                    </tr>
                    <tr data-link="@Url.Action("Conversation")">
                        <td class="collapsing">
                            <img class="ui tiny image" alt="" src="@ImageHelper.GetTransparentImage()" data-src="https://www.startupjobs.cz/upload/logos/logo-auta-online1146010588880.png" />
                        </td>
                        <td>
                            <a href="@Url.Action("Conversation")">
                                John Brown
                            </a>
                        </td>
                        <td class="collapsing w-body-text-right w-mobile-left">
                            <i class="calendar icon"></i>
                            @DateTime.Now.ToShortTimeString()
                        </td>
                        <td class="collapsing w-body-text-right w-mobile-left">
                            <i title="Nová zpráva"  class="warning red icon"></i> 
                        </td>
                    </tr>
                    <tr data-link="@Url.Action("Conversation")">
                        <td class="collapsing">
                            <img class="ui tiny image" alt="" src="@ImageHelper.GetTransparentImage()" data-src="https://www.startupjobs.cz/upload/logos/logo-auta-online1146010588880.png" />
                        </td>
                        <td>
                            <a href="@Url.Action("Conversation")">
                                John Brown
                            </a>
                        </td>
                        <td class="collapsing w-body-text-right w-mobile-left">
                            <i class="calendar icon"></i>
                            @DateTime.Now.ToShortTimeString()
                        </td>
                        <td class="collapsing w-body-text-right w-mobile-left">
                            <i title="Přečteno" class="checkmark green icon"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="ui tab segment" data-tab="second">

            <div class="ui info message">
                <p>
                    Nemáš žádné vystavené nabídky
                </p>
            </div>

            <div class="ui divided items">
                <div class="item">
                    <div class="content">
                        <div class="ui right floated w-font-light w-font-size-small">
                            <i class="users icon"></i> 3 zájemců
                        </div>
                        <a class="header">
                            Skype
                        </a>
                        <div class="extra w-font-size-small">
                            <i class="calendar icon"></i>
                            Vystaveno @DateTime.Now.ToShortTimeString() | <a href="@Url.Action("EditInternship", "Auth")">Upravit</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <div class="sixteen wide mobile sixteen wide tablet four wide computer column w-body-text-right">


        <div class="ui segment basic">
            <a class="ui primary fluid button" href="@Url.Action("NewInternship", "Auth")">
                Přidat stáž
            </a>

            @if (Model.CompanyIsCreated)
            {
                <a class="ui primary fluid button w-margin-top-10" href="@Url.Action("EditCompany", "Auth")">
                    Upravit firmu
                </a>
            }
            else
            {
                <a class="ui primary fluid button w-margin-top-10" href="@Url.Action("RegisterCompany", "Auth")">
                    Přidat firmu
                </a>
            }
        </div>

    </div>
</div>


