@using UI.Extensions;
@model UI.Builders.Auth.Views.AuthNewThesisView

@{
    Model.Metadata.BasicMetadata.Title = "Vytvořit stáž";
    Layout = "~/Views/Auth/AuthMaster.cshtml";
    // tabs
    Model.Tabs.MyTheses.Set(true, 2);
}

@if (Model.CanCreateThesis)
{
    @Html.Partial("Partials/AddEditThesis", Model.ThesisForm)
}
else
{
    @Html.RenderWarningMessage("Vložit závěrečnou práci lze jen pro zaregistrování firmy")

    <a href="@Url.Action("RegisterCompany")">
        <div class="ui large button primary">
            Registrovat firmu
        </div>
    </a>
}

